// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  fullName          String
  password          String?
  verificationOTP   String?
  otpExpiresAt      DateTime?
  isVerified        Boolean   @default(false)
  isPasswordSet     Boolean   @default(false)
  isProfileComplete Boolean   @default(false)
  
  // Password Reset
  resetToken        String?   @unique
  resetTokenExpiry  DateTime?
  
  // Profile Information
  phone             String?
  whatsapp          String?
  city              String?
  address           String?
  country           String?   @default("Cameroon")
  birthDate         DateTime?
  companyName       String?
  jobTitle          String?
  profilePicture    String?
  
  // Security
  pinCode           String?   // 5-digit PIN for invoice verification
  twoFactorSecret   String?   // 2FA secret key for TOTP
  twoFactorEnabled  Boolean   @default(false)
  twoFactorOTP      String?   // Hashed OTP for login 2FA
  twoFactorOTPExpiry DateTime? // OTP expiration time
  referralCode      String?   @unique  // 8-character alphanumeric referral code
  
  // Community & Chat
  username          String?   @unique  // Username for chat room access
  isProfilePublic   Boolean   @default(false)  // Allow public profile & chat/multiplayer features
  
  // Preferences
  newsletter        Boolean   @default(true)  // Opted in by default
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deletedAt         DateTime?  // For tracking account deletion (60-day reuse restriction)

  // Relations
  services          Service[]
  domains           Domain[]
  invoices          Invoice[]
  tickets           Ticket[]
  apiKeys           APIKey[]

  @@index([email])
}

model Service {
  id                String    @id @default(cuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name              String
  price             Float
  features          String    // JSON stringified array of features
  
  // Panel Information (required, not encrypted for admin display)
  type              String    // "DirectAdmin" or "cPanel" or "Plesk"
  url               String
  username          String
  password          String
  serverIp          String
  
  // Service Dates
  startDate         DateTime
  endDate           DateTime  // Auto-calculated: startDate + 1 year
  
  // Relations
  domains           Domain[]
  invoices          Invoice[]
  tickets           Ticket[]
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([userId])
}

model Domain {
  id                String    @id @default(cuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  serviceId         String
  service           Service   @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  
  name              String
  purchasedPrice    Float?    // Price paid for domain purchase
  hasRenewalPrice   Boolean   @default(false)
  renewalPrice      Float?    // Price for domain renewal
  
  // Domain Dates
  startDate         DateTime
  endDate           DateTime  // Auto-calculated: startDate + 1 year
  
  // Relations
  invoices          Invoice[]
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([userId])
  @@index([serviceId])
}

model Invoice {
  id                String    @id @default(cuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  serviceId         String?   // Optional: can be null if invoice is for domain only
  service           Service?  @relation(fields: [serviceId], references: [id], onDelete: SetNull)
  
  domainId          String?   // Optional: domain linked to service or standalone domain invoice
  domain            Domain?   @relation(fields: [domainId], references: [id], onDelete: SetNull)
  
  invoiceNumber     String    @unique
  amount            Float
  isFinal           Boolean   @default(false) // If true, always marked as PAID
  status            String    @default("pending") // "pending", "paid", "overdue"
  dueDate           DateTime
  invoiceDate       DateTime  @default(now())
  items             String?   // JSON stringified array of invoice items
  
  // Verification & Security
  verificationKey   String    @unique  // 8-character alphanumeric key for authenticity verification
  pinHash           String?            // Hash of the user's 5-digit PIN for secure verification
  signature         String?            // HMAC-SHA256 signature to prevent forgery (16 chars hex)
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([userId])
  @@index([serviceId])
  @@index([domainId])
}

// Support / Ticketing
model Ticket {
  id          String    @id @default(cuid())
  userId      String?   // Nullable for guest/visitor tickets
  user        User?     @relation(fields: [userId], references: [id], onDelete: SetNull)

  subject     String
  department  String    // e.g. support, billing, sales, noc, security, abuse, info, migrations
  content     String    // Stored as Markdown/HTML (allow small styling)

  // If the ticket is related to one of the user's services
  serviceId   String?   
  service     Service?  @relation(fields: [serviceId], references: [id], onDelete: SetNull)

  status      String    @default("open") // open, pending, resolved, closed
  priority    String?   // optional priority: low, medium, high

  // Attachments
  images      TicketImage[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([serviceId])
  @@index([status])
}

model TicketImage {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  url       String   // path to public/uploads/tickets/...
  fileName  String
  mimeType  String
  size      Int?

  createdAt DateTime @default(now())

  @@index([ticketId])
}

model APIKey {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  name        String    // User-friendly name for this API key
  key         String    @unique  // The actual secret key (hashed)
  keyPrefix   String    // First 8 chars of the key for display purposes
  
  isActive    Boolean   @default(true)
  
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?  // Optional: when this key expires
  lastUsedAt  DateTime?  // Track when this key was last used

  @@index([userId])
  @@index([key])
}

// Live Chat Models
model LiveChatDepartment {
  id          String    @id @default(cuid())
  name        String    @unique  // e.g., "Sales", "Support", "Billing", "Technical"
  description String?
  icon        String?   // Icon name for UI
  color       String?   // Color for UI
  
  agents      LiveChatAgent[]
  sessions    LiveChatSession[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model LiveChatAgent {
  id            String    @id @default(cuid())
  departmentId  String
  department    LiveChatDepartment @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  
  name          String
  email         String    @unique
  avatar        String?
  status        String    @default("offline") // "online", "offline", "away", "busy"
  isActive      Boolean   @default(true)
  
  sessions      LiveChatSession[]
  messages      LiveChatMessage[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([departmentId])
}

model LiveChatSession {
  id              String    @id @default(cuid())
  departmentId    String
  department      LiveChatDepartment @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  
  agentId         String?
  agent           LiveChatAgent? @relation(fields: [agentId], references: [id], onDelete: SetNull)
  
  visitorEmail    String
  visitorName     String
  visitorPhone    String?
  visitorIP       String?
  
  status          String    @default("waiting") // "waiting", "active", "closed"
  subject         String?
  notes           String?
  
  messages        LiveChatMessage[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  closedAt        DateTime?
  
  @@index([departmentId])
  @@index([agentId])
  @@index([status])
  @@index([createdAt])
}

model LiveChatMessage {
  id        String    @id @default(cuid())
  sessionId String
  session   LiveChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  agentId   String?
  agent     LiveChatAgent? @relation(fields: [agentId], references: [id], onDelete: SetNull)
  
  senderType String    // "visitor" or "agent"
  senderName String
  message   String    @db.LongText
  
  createdAt DateTime  @default(now())
  
  @@index([sessionId])
  @@index([agentId])
  @@index([createdAt])
}
