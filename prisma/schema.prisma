// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                String              @id @default(cuid())
  email             String              @unique
  username          String?             @unique
  passwordHash      String?
  isEmailVerified   Boolean             @default(false)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  orders            Order[]
  paymentProofs     PaymentProof[]
  apiKeys           ApiKey[]
  services          Service[]
}

model VerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PasswordReset {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

model Order {
  id              String          @id @default(cuid())
  userId          String?
  user            User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  planType        String          // "shared" or "reseller"
  planName        String
  planPrice       Float
  
  fullName        String
  email           String
  desiredDomain   String
  
  status          String          @default("pending")  // pending, verified, paid, active
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  paymentProofs   PaymentProof[]
}

model PaymentProof {
  id              String   @id @default(cuid())
  orderId         String
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  userId          String?
  user            User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  imageUrls       String   @default("")  // JSON array of image URLs
  description     String?
  
  contactFullName String?
  contactEmail    String?
  contactPhone    String?
  contactAddress  String?
  
  status          String   @default("pending")  // pending, approved, rejected
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model NewsletterSubscription {
  id        String   @id @default(cuid())
  email     String   @unique
  token     String?  @unique
  status    String   @default("pending")  // pending, active, unsubscribed
  subscribedAt DateTime @default(now())
  confirmedAt DateTime?
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([token])
}

model ApiKey {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name      String
  key       String   @unique
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([key])
}

model Service {
  id                String            @id @default(cuid())
  userId            String
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  planType          String            // "Shared", "Reseller", "VPS", "DedicatedServer"
  panelType         String            // "DirectAdmin", "cPanel", "Other"
  planName          String
  planPrice         Float             // Price per month/renewal
  features          String            @default("[]") // JSON array of feature strings
  
  planStatus        String            @default("active")  // "active", "suspended", "cancelled", "expired"
  nextRenewalDate   DateTime          // Date when service renews (set to now + 365 days via code)
  
  associatedDomains ServiceDomain[]
  
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  
  @@index([userId])
  @@index([planStatus])
}

model ServiceDomain {
  id                String            @id @default(cuid())
  serviceId         String
  service           Service           @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  
  domainName        String
  domainStatus      String            @default("active")  // "active", "pending", "expired", "suspended"
  purchasePrice     Float
  renewalPrice      Float
  ns1               String            @default("ns1.kmerhosting.com")
  ns2               String            @default("ns2.kmerhosting.com")
  
  nextRenewalDate   DateTime          @default(now()) // Domain renewal date (will be updated via code to +365 days)
  
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  
  @@index([serviceId])
}



